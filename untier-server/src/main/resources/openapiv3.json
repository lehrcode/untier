{
  "openapi": "3.0.1",
  "info": {
    "title": "Untier API",
    "version": "0.1.0"
  },
  "tags": [
    {
      "name": "AuthoringService"
    },
    {
      "name": "QueryService"
    }
  ],
  "paths": {
    "/postings": {
      "get": {
        "tags": [
          "QueryService"
        ],
        "summary": "getPostings",
        "operationId": "getPostings",
        "parameters": [
          {
            "name": "limit",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "page",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Posting"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "AuthoringService"
        ],
        "summary": "publish",
        "operationId": "publish",
        "requestBody": {
          "content": {
            "image/gif": {
              "schema": {
                "type": "string",
                "format": "binary"
              }
            },
            "image/jpeg": {
              "schema": {
                "type": "string",
                "format": "binary"
              }
            },
            "image/png": {
              "schema": {
                "type": "string",
                "format": "binary"
              }
            },
            "image/webp": {
              "schema": {
                "type": "string",
                "format": "binary"
              }
            },
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "text": {
                    "type": "string"
                  },
                  "image": {
                    "type": "string",
                    "format": "binary"
                  }
                },
                "required": ["text", "image"]
              }
            },
            "text/plain": {
              "schema": {
                "type": "string"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "successful operation"
          },
          "400": {
            "description": "failed operation",
            "content": {
              "application/problem+json": {
                "schema": {
                  "$ref": "#/components/schemas/Problem"
                }
              }
            }
          },
          "403": {
            "description": "failed authentication"
          }
        }
      }
    },
    "/postings/{id}": {
      "get": {
        "tags": [
          "QueryService"
        ],
        "summary": "getPosting",
        "operationId": "getPosting",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Posting"
                }
              }
            }
          },
          "404": {
            "description": "not found"
          }
        }
      },
      "delete": {
        "tags": [
          "AuthoringService"
        ],
        "summary": "retract",
        "operationId": "retract",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "successful operation"
          },
          "403": {
            "description": "failed authentication"
          }
        }
      }
    },
    "/images/{id}": {
      "get": {
        "tags": [
          "QueryService"
        ],
        "summary": "getImage",
        "operationId": "getImage",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "*/*": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              }
            }
          },
          "404": {
            "description": "not found"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Posting": {
        "type": "object",
        "properties": {
          "author": {
            "type": "string"
          },
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "text": {
            "type": "string"
          },
          "published": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": [
          "author",
          "id",
          "text",
          "published"
        ]
      },
      "Problem": {
        "type": "object",
        "properties": {
          "status": {
            "type": "integer",
            "format": "int32"
          },
          "title": {
            "type": "string"
          },
          "detail": {
            "type": "string"
          }
        },
        "required": [
          "status",
          "title"
        ]
      }
    },
    "securitySchemes": {
      "oAuthSample": {
        "type": "oauth2",
        "flows": {
          "implicit": {
            "authorizationUrl": "http://localhost:1337/auth",
            "scopes": {
              "profile": "",
              "email": "",
              "offline_access": ""
            }
          },
          "authorizationCode": {
            "authorizationUrl": "http://localhost:1337/auth",
            "tokenUrl": "http://localhost:1337/token",
            "refreshUrl": "http://localhost:1337/token",
            "scopes": {
              "profile": "",
              "email": "",
              "offline_access": ""
            }
          }
        }
      }
    }
  },
  "security": [
    {
      "oAuthSample": [
        "profile",
        "email",
        "offline_access"
      ]
    }
  ]
}
